<%= form_for(@post) do |f| %>
  <div >
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div >
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div >
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
